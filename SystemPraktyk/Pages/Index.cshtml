    document.getElementById('buttonMojeWnioski').addEventListener('click', function () {
        window.location.href = '/MojeWnioski';
    });

    document.getElementById('buttonZlozWniosek').addEventListener('click', function () {
        window.location.href = '/ZlozWniosek';
    });
