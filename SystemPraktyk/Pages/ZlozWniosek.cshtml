@page
@model SystemPraktyk.Pages.ZlozWniosekModel
@{
}
<div class="text-center">
    <select id="documentSelect">
        <option value="">Wybierz wniosek: </option>
        <option value="document1">Wniosek o praktyki</option>
        <option value="document2">Podanie o praktyki</option>
    </select>
</div>

<script type="text/javascript">
    document.getElementById('documentSelect').addEventListener('change', function () {
        var value = this.value;
        if (value === 'document1') {
            window.location.href = '/wniosek';
        } else if (value === 'document2') {
            window.location.href = '/podanie';
        }
    });
</script>
